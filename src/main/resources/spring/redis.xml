<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans-4.0.xsd
        http://www.springframework.org/schema/context
        http://www.springframework.org/schema/context/spring-context-4.0.xsd">

        <context:property-placeholder location="classpath*:properties/local.properties" />

        <bean id="poolConfig" class="redis.clients.jedis.JedisPoolConfig">
                <property name="maxIdle" value="${redis.maxIdle}" />
                <property name="maxTotal" value="${redis.maxActive}" />
                <property name="minIdle" value="${redis.minIdle}" />
                <property name="testOnBorrow" value="${redis.testOnBorrow}" />
        </bean>

        <bean id="jedis" class="redis.clients.jedis.JedisCluster">
                <constructor-arg>
                        <set>
                                <value>192.168.13.94:7000</value>
                                <value>192.168.13.94:7001</value>
                                <value>192.168.13.94:7002</value>
                                <value>192.168.13.95:7003</value>
                                <value>192.168.13.95:7004</value>
                                <value>192.168.13.96:7005</value>
                        </set>
                </constructor-arg>
                <constructor-arg name="poolConfig" ref="poolConfig" />
        </bean>

